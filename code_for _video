import cv2
import numpy as np

video_path = r"C:\Users\varsh\Videos\Screen Recordings\Screen Recording 2024-10-06 173542.mp4"
output_path = r"C:\Users\varsh\Videos\Screen Recordings\Screen Recording"  # Path to save the output video
cap = cv2.VideoCapture(video_path)

# Check if video opened successfully
if not cap.isOpened():
    print("Error: Could not open video.")
    exit()

# Get video properties
frame_width = int(cap.get(cv2.CAP_PROP_FRAME_WIDTH))
frame_height = int(cap.get(cv2.CAP_PROP_FRAME_HEIGHT))
fps = int(cap.get(cv2.CAP_PROP_FPS))

fourcc = cv2.VideoWriter_fourcc(*'XVID')
out = cv2.VideoWriter(output_path, fourcc, fps, (frame_width, frame_height))

while True:
    ret, frame = cap.read()
    if not ret:
        print("End of video.")
        break

    # Convert frame to grayscale
    gray_frame = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)

    corners = cv2.goodFeaturesToTrack(gray_frame, maxCorners=1000, qualityLevel=0.01, minDistance=5)
    corners = np.int0(corners)

    for i in corners:
        x, y = i.ravel()
        cv2.circle(frame, (x, y), 3, (0, 0, 255), -1)  # Red circles for corners

    out.write(frame)

    cv2.imshow('Corners Detection', frame)
    if cv2.waitKey(1) & 0xFF == ord('q'):  # Press 'q' to quit early
        break

cap.release()
out.release()
cv2.destroyAllWindows()
